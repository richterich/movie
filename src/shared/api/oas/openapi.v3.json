{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.24",
    "title": "Movies API",
    "description": ""
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/discover/movies": {
      "parameters": [
        {
          "name": "certification",
          "description": "use in conjunction with `region`",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "certification.gte",
          "description": "use in conjunction with `region`",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "certification.lte",
          "description": "use in conjunction with `region`",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "certificationCountry",
          "description": "use in conjunction with the `certification`, `certification.gte` and `certification.lte` filters",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "includeAdult",
          "in": "query",
          "required": false,
          "schema": {
            "type": "boolean",
            "default": false
          }
        },
        {
          "name": "includeVideo",
          "in": "query",
          "required": false,
          "schema": {
            "type": "boolean",
            "default": false
          }
        },
        {
          "name": "language",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string",
            "default": "en-US"
          }
        },
        {
          "name": "page",
          "in": "query",
          "required": false,
          "schema": {
            "minimum": 1,
            "type": "integer",
            "format": "int32",
            "default": 1
          }
        },
        {
          "name": "primaryReleaseYear",
          "in": "query",
          "required": false,
          "schema": {
            "minimum": 1000,
            "type": "integer",
            "format": "int32"
          }
        },
        {
          "name": "primaryReleaseDate.gte",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string",
            "format": "date"
          }
        },
        {
          "name": "primaryReleaseDate.lte",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string",
            "format": "date"
          }
        },
        {
          "name": "region",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string",
            "pattern": "^[A-Z]{2}$"
          }
        },
        {
          "name": "releaseDate.gte",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string",
            "format": "date"
          }
        },
        {
          "name": "releaseDate.lte",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string",
            "format": "date"
          }
        },
        {
          "name": "rating.gte",
          "in": "query",
          "required": false,
          "schema": {
            "minimum": 0,
            "type": "number",
            "format": "float"
          }
        },
        {
          "name": "rating.lte",
          "in": "query",
          "required": false,
          "schema": {
            "minimum": 0,
            "type": "number",
            "format": "float"
          }
        },
        {
          "name": "voteCount.gte",
          "in": "query",
          "required": false,
          "schema": {
            "minimum": 0,
            "type": "number",
            "format": "float"
          }
        },
        {
          "name": "voteCount.lte",
          "in": "query",
          "required": false,
          "schema": {
            "minimum": 0,
            "type": "number",
            "format": "float"
          }
        },
        {
          "name": "watchRegion",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "withCastCondition",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/FilterCondition"
          }
        },
        {
          "name": "withCast",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withCompaniesCondition",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/FilterCondition"
          }
        },
        {
          "name": "withCompanies",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withCrewCondition",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/FilterCondition"
          }
        },
        {
          "name": "withCrew",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withGenresCondition",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/FilterCondition"
          }
        },
        {
          "name": "withGenres",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withKeywordsCondition",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/FilterCondition"
          }
        },
        {
          "name": "withKeywords",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withOriginCountry",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withOriginalLanguage",
          "description": "Short format without region",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withPeopleCondition",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/FilterCondition"
          }
        },
        {
          "name": "withPeople",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withDuration.gte",
          "in": "query",
          "required": false,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        },
        {
          "name": "withDuration.lte",
          "in": "query",
          "required": false,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        },
        {
          "name": "withWatchMonetizationTypes",
          "in": "query",
          "required": false,
          "schema": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WatchMonetizationType"
            }
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withWatchProviders",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withoutCompanies",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withoutGenres",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withoutKeywords",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "withoutWatchProviders",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/ArrayString"
          },
          "style": "form",
          "explode": false
        },
        {
          "name": "year",
          "in": "query",
          "required": false,
          "schema": {
            "minimum": 1000,
            "type": "integer",
            "format": "int32"
          }
        },
        {
          "name": "sortBy",
          "in": "query",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/SortBy"
          },
          "style": "deepObject"
        }
      ],
      "get": {
        "summary": "Get movies discovery",
        "responses": {
          "200": {
            "description": "The movies list by filters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieListResponse"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/genres/movies": {
      "parameters": [
        {
          "name": "language",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get genres list",
        "responses": {
          "200": {
            "description": "The genres list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Genres"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/movies/{listType}": {
      "parameters": [
        {
          "name": "listType",
          "description": "The movie list type",
          "in": "path",
          "required": true,
          "schema": {
            "$ref": "#/components/schemas/MovieListType"
          }
        },
        {
          "name": "page",
          "in": "query",
          "required": false,
          "schema": {
            "type": "integer"
          }
        },
        {
          "name": "language",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "countryCode",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get movies list",
        "responses": {
          "200": {
            "description": "The movies list to the provided `listType`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieListResponse"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/movies/{id}/details": {
      "parameters": [
        {
          "name": "id",
          "description": "The unique identifier of the movie",
          "in": "path",
          "required": true,
          "schema": {
            "$ref": "#/components/schemas/MovieId"
          }
        },
        {
          "name": "language",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get movie details",
        "responses": {
          "200": {
            "description": "The movie details to the provided `id`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieDetailsResponse"
                }
              }
            }
          },
          "404": {
            "description": "No movie found for the provided `id`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/movies/{id}/videos": {
      "parameters": [
        {
          "name": "id",
          "description": "The unique identifier of the movie",
          "in": "path",
          "required": true,
          "schema": {
            "$ref": "#/components/schemas/MovieId"
          }
        },
        {
          "name": "language",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "types",
          "in": "query",
          "required": false,
          "schema": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/VideoType"
            },
            "default": ["Trailer"]
          },
          "style": "form",
          "explode": false
        }
      ],
      "get": {
        "summary": "Get movie details",
        "responses": {
          "200": {
            "description": "The movie videos to the provided `id`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieVideosResponse"
                }
              }
            }
          },
          "404": {
            "description": "No movie found for the provided `id`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MovieId": {
        "description": "The unique identifier of a movie",
        "type": "integer"
      },
      "MovieDuration": {
        "description": "Movie duration in minutes",
        "type": "integer",
        "example": 80
      },
      "MovieRating": {
        "type": "number",
        "format": "float",
        "example": 9.1
      },
      "ImagePath": {
        "description": "https://developer.themoviedb.org/docs/image-basics",
        "type": "string",
        "example": "/hash.jpg"
      },
      "MovieListType": {
        "type": "string",
        "enum": ["popular", "upcoming", "top-rated", "now_playing"]
      },
      "MovieShortResponse": {
        "type": "object",
        "required": ["id", "title", "rating", "isAdult"],
        "properties": {
          "id": {
            "$ref": "#/components/schemas/MovieId"
          },
          "title": {
            "type": "string"
          },
          "poster": {
            "$ref": "#/components/schemas/ImagePath"
          },
          "backdrop": {
            "$ref": "#/components/schemas/ImagePath"
          },
          "rating": {
            "$ref": "#/components/schemas/MovieRating"
          },
          "genreIds": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "releaseDate": {
            "type": "string",
            "format": "date"
          },
          "isAdult": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "MovieVideosResponse": {
        "type": "object",
        "required": ["id", "results"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MovieVideo"
            }
          },
          "type": {
            "$ref": "#/components/schemas/VideoType"
          }
        }
      },
      "MovieVideo": {
        "type": "object",
        "required": ["name", "key", "size", "type", "isOfficial"],
        "properties": {
          "name": {
            "type": "string"
          },
          "key": {
            "type": "string"
          },
          "size": {
            "type": "integer"
          },
          "publicationDate": {
            "type": "string",
            "format": "date"
          },
          "type": {
            "$ref": "#/components/schemas/VideoType"
          },
          "isOfficial": {
            "type": "boolean"
          }
        }
      },
      "VideoType": {
        "type": "string",
        "enum": ["Trailer", "Teaser", "Featurette", "Bloopers", "Behind the Scenes", "Opening Credits", "Clip"]
      },
      "Genre": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Genres": {
        "type": "object",
        "required": ["genres"],
        "properties": {
          "genres": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Genre"
            }
          }
        }
      },
      "Country": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Company": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "logo": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "originCountryCode": {
            "type": "string"
          }
        }
      },
      "MovieDetailsResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/MovieShortResponse"
          },
          {
            "type": "object",
            "required": [
              "status",
              "budget",
              "overview",
              "genres",
              "duration",
              "tagline",
              "revenue",
              "popularity",
              "countries",
              "companies"
            ],
            "properties": {
              "status": {
                "type": "string"
              },
              "budget": {
                "type": "integer"
              },
              "overview": {
                "type": "string"
              },
              "genres": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Genre"
                }
              },
              "duration": {
                "$ref": "#/components/schemas/MovieDuration"
              },
              "tagline": {
                "type": "string"
              },
              "revenue": {
                "type": "integer"
              },
              "popularity": {
                "type": "number",
                "format": "float"
              },
              "countries": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Country"
                }
              },
              "companies": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Company"
                }
              }
            }
          }
        ]
      },
      "MovieListResponse": {
        "type": "object",
        "required": ["page", "totalPages", "totalItems", "items"],
        "properties": {
          "page": {
            "type": "integer",
            "default": 1
          },
          "totalPages": {
            "type": "integer",
            "default": 1
          },
          "totalItems": {
            "type": "integer",
            "default": 0
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MovieShortResponse"
            }
          }
        }
      },
      "WatchMonetizationType": {
        "type": "string",
        "enum": ["flatrate", "free", "ads", "rent", "buy"]
      },
      "FilterCondition": {
        "type": "string",
        "enum": ["AND", "OR"],
        "default": "AND"
      },
      "ArrayString": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "SortBy": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "order": {
            "$ref": "#/components/schemas/SortOrder"
          },
          "option": {
            "$ref": "#/components/schemas/SortOption"
          }
        }
      },
      "SortOption": {
        "type": "string",
        "enum": ["popularity", "rating", "primaryReleaseDate", "revenue"]
      },
      "SortOrder": {
        "type": "string",
        "enum": ["asc", "desc"]
      },
      "Error": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": {
            "description": "A human readable error message",
            "type": "string"
          }
        }
      }
    }
  }
}
