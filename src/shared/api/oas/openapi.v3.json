{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.1",
    "title": "Movies API",
    "description": ""
  },
  "servers": [
    {
      "url": "http://127.0.0.1",
      "description": "Local server"
    }
  ],
  "paths": {
    "/genres/movies": {
      "parameters": [
        {
          "name": "language",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get genres list",
        "responses": {
          "200": {
            "description": "The genres list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Genres"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/movies/{listType}": {
      "parameters": [
        {
          "name": "listType",
          "description": "The movie list type",
          "in": "path",
          "required": true,
          "schema": {
            "$ref": "#/components/schemas/MovieListType"
          }
        },
        {
          "name": "page",
          "in": "query",
          "required": false,
          "schema": {
            "type": "integer"
          }
        },
        {
          "name": "language",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "countryCode",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get movies list",
        "responses": {
          "200": {
            "description": "The movies list to the provided `listType`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieListResponse"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/movies/{id}/details": {
      "parameters": [
        {
          "name": "id",
          "description": "The unique identifier of the movie",
          "in": "path",
          "required": true,
          "schema": {
            "$ref": "#/components/schemas/MovieId"
          }
        },
        {
          "name": "language",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get movie details",
        "responses": {
          "200": {
            "description": "The movie details to the provided `id`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieDetailsResponse"
                }
              }
            }
          },
          "404": {
            "description": "No movie found for the provided `id`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MovieId": {
        "description": "The unique identifier of a movie",
        "type": "integer"
      },
      "MovieDuration": {
        "description": "Movie duration in minutes",
        "type": "integer",
        "example": 80
      },
      "MovieRating": {
        "type": "number",
        "format": "double",
        "example": 9.1
      },
      "ImagePath": {
        "description": "https://developer.themoviedb.org/docs/image-basics",
        "type": "string",
        "example": "/hash.jpg"
      },
      "MovieListType": {
        "type": "string",
        "enum": ["popular", "upcoming", "top-rated", "now_playing"]
      },
      "MovieShortResponse": {
        "type": "object",
        "required": ["id", "title", "rating", "isAdult"],
        "properties": {
          "id": {
            "$ref": "#/components/schemas/MovieId"
          },
          "title": {
            "type": "string"
          },
          "poster": {
            "$ref": "#/components/schemas/ImagePath"
          },
          "backdrop": {
            "$ref": "#/components/schemas/ImagePath"
          },
          "rating": {
            "$ref": "#/components/schemas/MovieRating"
          },
          "genreIds": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "releaseDate": {
            "type": "string",
            "format": "date"
          },
          "isAdult": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "Genre": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Genres": {
        "type": "object",
        "required": ["genres"],
        "properties": {
          "genres": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Genre"
            }
          }
        }
      },
      "Country": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Company": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "logo": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "originCountryCode": {
            "type": "string"
          }
        }
      },
      "MovieDetailsResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/MovieShortResponse"
          },
          {
            "type": "object",
            "required": [
              "status",
              "budget",
              "overview",
              "genres",
              "duration",
              "tagline",
              "revenue",
              "popularity",
              "countries",
              "companies"
            ],
            "properties": {
              "status": {
                "type": "string"
              },
              "budget": {
                "type": "integer"
              },
              "overview": {
                "type": "string"
              },
              "genres": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Genre"
                }
              },
              "duration": {
                "$ref": "#/components/schemas/MovieDuration"
              },
              "tagline": {
                "type": "string"
              },
              "revenue": {
                "type": "integer"
              },
              "popularity": {
                "type": "number",
                "format": "double"
              },
              "countries": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Country"
                }
              },
              "companies": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Company"
                }
              }
            }
          }
        ]
      },
      "MovieListResponse": {
        "type": "object",
        "required": ["page", "totalPages", "totalItems", "items"],
        "properties": {
          "page": {
            "type": "integer",
            "default": 1
          },
          "totalPages": {
            "type": "integer",
            "default": 1
          },
          "totalItems": {
            "type": "integer",
            "default": 0
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MovieShortResponse"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": {
            "description": "A human readable error message",
            "type": "string"
          }
        }
      }
    }
  }
}
